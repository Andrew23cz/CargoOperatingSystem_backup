@page "/airlines/create/"
@inject HttpClient _client
@inject NavigationManager _navManager
@attribute [Authorize]

<h3 class="card-title">Create Airline</h3>
<hr />
<br/>

<FormComponent ButtonText="Create" OnValidSubmit="@CreateAirline" airline="airline"/> 


@code {

    Airline airline = new Airline();

    private async Task CreateAirline()
    {
        await _client.PostAsJsonAsync(Endpoints.AirlinesEndpoint, airline);
        _navManager.NavigateTo(Endpoints.AirlinesIndex);
    }


}
