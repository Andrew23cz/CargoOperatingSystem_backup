<EditForm Model="@airline" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="form-group">
        <label>Name:</label>
        <div>
            <InputText @bind-Value="@airline.Name" class="form-control"/>
            <ValidationMessage For="@(()=> airline.Name)" />
        </div>
    </div>

    <div class="form-group">
        <label>IATA Code:</label>
        <div>
            <InputText @bind-Value="@airline.Code" class="form-control"/>
            <ValidationMessage For="@(()=> airline.Code)" />
        </div>
    </div>

    <div class="form-group">
        <label>Prefix:</label>
        <div>
            <InputText @bind-Value="@airline.Prefix" class="form-control"/>
            <ValidationMessage For="@(()=> airline.Prefix)" />
        </div>
    </div>

    <div class="form-group">
        <label>AWB Header Address (1st row):</label>
        <div>
            <InputText @bind-Value="@airline.AwbHeaderA" class="form-control"/>
            <ValidationMessage For="@(()=> airline.AwbHeaderA)" />
        </div>
    </div>
    <div class="form-group">
        <label>AWB Header Address (2nd row):</label>
        <div>
            <InputText @bind-Value="@airline.AwbHeaderB" class="form-control"/>
            <ValidationMessage For="@(()=> airline.AwbHeaderB)" />
        </div>
    </div>

    <div class="form-group mt-1 mr-3">
        <div class="form-inline">
            <label id="ChargeNameSelectLabel">Billing Date Basis:</label>
            <div>
                <InputSelect @bind-Value="airline.BillingDateBasis" class="form-control-sm">
                    <option value="">-- Select Billing Date Basis ... --</option>
                    <option value="issuingdate">MAWB Issuing Date</option>
                    <option value="firstflightdate">First Flight Date Booked</option>
                    <option value="secondflightdate">Second Flight Date Booked</option>
                </InputSelect>
                <ValidationMessage For="@(() => airline.BillingDateBasis)" />
            </div>
        </div>
    </div>

            
    <button type="submit" class="btn btn-success btn-block">
        @ButtonText
    </button>

</EditForm>


@code {
    [Parameter] public Airline airline { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
