<EditForm Model="@shipper" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="form-group">
        <label>Name:</label>
        <div>
            <InputText @bind-Value="@shipper.Name" class="form-control"/>
            <ValidationMessage For="@(()=> shipper.Name)" />
        </div>
    </div>
    <div class="form-group">
        <label>Address (1st row):</label>
        <div>
            <InputText @bind-Value="@shipper.AddressA" class="form-control"/>
            <ValidationMessage For="@(()=> shipper.AddressA)" />
        </div>
    </div>
    <div class="form-group">
        <label>Address (2nd row):</label>
        <div>
            <InputText @bind-Value="@shipper.AddressB" class="form-control"/>
            <ValidationMessage For="@(()=> shipper.AddressB)" />
        </div>
    </div>
    <div class="form-group">
        <label>Address (3rd row):</label>
        <div>
            <InputText @bind-Value="@shipper.AddressC" class="form-control"/>
            <ValidationMessage For="@(()=> shipper.AddressC)" />
        </div>
    </div>
    <div class="form-group">
        <label>Email:</label>
        <div>
            <InputText @bind-Value="@shipper.Email" class="form-control"/>
            <ValidationMessage For="@(()=> shipper.Email)" />
        </div>
    </div>
    <div class="form-group">
        <label>Phone Number:</label>
        <div>
            <InputNumber @bind-Value="@shipper.PhoneNumber" class="form-control"/>
            <ValidationMessage For="@(()=> shipper.PhoneNumber)" />
        </div>
    </div>
    
    <button type="submit" class="btn btn-success btn-block">
        @ButtonText
    </button>

</EditForm>

@code {

    [Parameter] public Shipper shipper { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
