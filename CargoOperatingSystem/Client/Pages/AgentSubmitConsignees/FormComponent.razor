<EditForm Model="@agentSubmitConsignee" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="form-group">
        <label>Name:</label>
        <div>
            <InputText @bind-Value="@agentSubmitConsignee.Name" class="form-control"/>
            <ValidationMessage For="@(()=> agentSubmitConsignee.Name)" />
        </div>
    </div>
    <div class="form-group">
        <label>Address (1st row):</label>
        <div>
            <InputText @bind-Value="@agentSubmitConsignee.AddressA" class="form-control"/>
            <ValidationMessage For="@(()=> agentSubmitConsignee.AddressA)" />
        </div>
    </div>
    <div class="form-group">
        <label>Address (2nd row):</label>
        <div>
            <InputText @bind-Value="@agentSubmitConsignee.AddressB" class="form-control"/>
            <ValidationMessage For="@(()=> agentSubmitConsignee.AddressB)" />
        </div>
    </div>
    <div class="form-group">
        <label>Address (3rd row):</label>
        <div>
            <InputText @bind-Value="@agentSubmitConsignee.AddressC" class="form-control"/>
            <ValidationMessage For="@(()=> agentSubmitConsignee.AddressC)" />
        </div>
    </div>
    <div class="form-group">
        <label>Email:</label>
        <div>
            <InputText @bind-Value="@agentSubmitConsignee.Email" class="form-control"/>
            <ValidationMessage For="@(()=> agentSubmitConsignee.Email)" />
        </div>
    </div>
    <div class="form-group">
        <label>Phone Number:</label>
        <div>
            <InputNumber @bind-Value="@agentSubmitConsignee.PhoneNumber" class="form-control"/>
            <ValidationMessage For="@(()=> agentSubmitConsignee.PhoneNumber)" />
        </div>
    </div>
    
    <button type="submit" class="btn btn-success btn-block">
        @ButtonText
    </button>

</EditForm>

@code {

    [Parameter] public AgentSubmitConsignee agentSubmitConsignee { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
