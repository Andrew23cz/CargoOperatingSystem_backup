@page "/deliveries/create/"
@inject HttpClient _client
@inject NavigationManager _navManager
@attribute [Authorize]

<h3 class="card-title">Create Delivery</h3>
<hr />
<br/>

<FormComponent ButtonText="Update" OnValidSubmit="@CreateDelivery" delivery="delivery"/> 


@code {

    Delivery delivery = new Delivery();

    private async Task CreateDelivery()
    {
        await _client.PostAsJsonAsync(Endpoints.DeliveriesEndpoint, delivery);
        _navManager.NavigateTo(Endpoints.DeliveriesIndex);
    }


}
