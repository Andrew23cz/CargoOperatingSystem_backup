@page "/consignees/create/"
@inject HttpClient _client
@inject NavigationManager _navManager
@attribute [Authorize]

<h3 class="card-title">Create Consignee</h3>
<hr />
<br/>

<FormComponent ButtonText="Create New" OnValidSubmit="@CreateConsignee" consignee="consignee"/> 


@code {

    Consignee consignee = new Consignee();

    private async Task CreateConsignee()
    {
        await _client.PostAsJsonAsync(Endpoints.ConsigneesEndpoint, consignee);
        _navManager.NavigateTo(Endpoints.ConsigneesIndex);
    }


}
